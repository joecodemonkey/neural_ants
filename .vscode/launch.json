{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Debug Neural Ants",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/neural_ants",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Debug Neural Ants (with args)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/neural_ants",
            "args": [
                "${input:programArgs}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ],
    "inputs": [
        {
            "id": "programArgs",
            "type": "promptString",
            "description": "Enter program arguments",
            "default": ""
        }
    ]
}